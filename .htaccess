<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ruta base del proyecto (ajústala según el nombre de tu carpeta)
    RewriteBase /webcon/

    # Si entran a la raíz, redirige al controlador principal
    RewriteRule ^$ index.php [L,QSA]

    # Rutas tipo /controlador/accion
    RewriteRule ^([^/]+)/?$ index.php?route=$1 [L,QSA]
    RewriteRule ^([^/]+)/([^/]+)/?$ index.php?route=$1:$2 [L,QSA]
</IfModule>
